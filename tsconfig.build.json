{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "globals.d.ts",
    "lib/*",
    "lib/**/*",
  ],
  "exclude": [
    "**/__test__",
    "**/__tests__",
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "DOM"
    ],
    "types": [
      "node"
    ],
  }
}